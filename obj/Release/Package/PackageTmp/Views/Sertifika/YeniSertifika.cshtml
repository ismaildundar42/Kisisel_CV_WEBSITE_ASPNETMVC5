@model UdemyMVCCVsitesi.Models.Entitiy.tbl_oduller
@{
    ViewBag.Title = "YeniSertifika";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Yeni Sertifika Ekleme Sayfası</h4>
<br />
<form class="form-group" method="post">

    <div class="mb-3">
        @Html.Label("Sertifika Tarih", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.Label("Sertifika Açıklama", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control"})
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>