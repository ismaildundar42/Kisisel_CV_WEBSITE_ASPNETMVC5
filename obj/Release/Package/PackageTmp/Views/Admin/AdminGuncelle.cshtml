@model UdemyMVCCVsitesi.Models.Entitiy.tbl_login
@{
    ViewBag.Title = "AdminGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Admin Bilgi Güncelleme Sayfası</h4>
<br />
<form class="form-group" method="post">
    <div class="mb-3">
        @Html.Label("Admin ID", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.Label("Kullanıcı Adı", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.Label("Şifre", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
    </div>



    <button type="submit" class="btn btn-success">Güncelle</button>
</form>

