@model UdemyMVCCVsitesi.Models.Entitiy.tbl_deneyim

@{
    ViewBag.Title = "DeneyimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Deneyim Güncelleme Sayfası</h4>
<br />
<form class="form-group" method="post">
    <div class="mb-3">
        @Html.Label("Deneyim ID", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", placeholder = "Deneyim ID giriniz" })
    </div>

    <div class="mb-3">
        @Html.Label("Deneyim Başlık", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", placeholder = "Başlık giriniz" })
    </div>

    <div class="mb-3">
        @Html.Label("Deneyim Alt Başlık", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.AltBaslik, new { @class = "form-control", placeholder = "Başlık giriniz" })
    </div>

    <div class="mb-3">
        @Html.Label("Deneyim Açıklama", htmlAttributes: new { @class = "form-label" })
        @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", placeholder = "Başlık giriniz" })
    </div>

    <div class="mb-3">
        @Html.Label("Deneyim Tarih", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", placeholder = "Başlık giriniz" })
    </div>


    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
