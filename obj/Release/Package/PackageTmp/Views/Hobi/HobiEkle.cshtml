@model UdemyMVCCVsitesi.Models.Entitiy.tbl_hobiler
@{
    ViewBag.Title = "HobiEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Yeni Hobi Ekleme Sayfası</h4>
<br />
<form class="form-group" method="post">

    <div class="mb-3">
        @Html.Label("Eklenecek Hobi", htmlAttributes: new { @class = "form-label" })
