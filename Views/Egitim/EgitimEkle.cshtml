@model UdemyMVCCVsitesi.Models.Entitiy.tbl_egitim
@{
    ViewBag.Title = "EgitimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Yeni Eğitim Ekleme Sayfası</h4>
<br />
<form class="form-group" method="post">

    <div class="mb-3">
        @Html.Label("Başlık", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Baslik,"")
    </div>

    <div class="mb-3">
        @Html.Label("Alt Başlık 1", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.AltBaslik1, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AltBaslik1, "")
    </div>

    <div class="mb-3">
        @Html.Label("Alt Başlık 2", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.AltBaslik2, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AltBaslik2, "")
    </div>

    <div class="mb-3">
        @Html.Label("GANO", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.GANO, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.GANO, "")
    </div>

    <div class="mb-3">
        @Html.Label("Tarih", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Tarih, "")
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

