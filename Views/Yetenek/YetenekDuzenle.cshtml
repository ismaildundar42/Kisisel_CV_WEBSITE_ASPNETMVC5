@model UdemyMVCCVsitesi.Models.Entitiy.tbl_yetenekler

@{
    ViewBag.Title = "YetenekDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Yetenek Güncelleme Sayfası</h4>
<br />
<form class="form-group" method="post">

    <div class="mb-3">
        @Html.Label("Yetenek Açıklaması", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Yetenek, new { @class = "form-control", placeholder = "Başlık giriniz" })
    </div>

    <div class="mb-3">
        @Html.Label("Derece", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Oran, new { @class = "form-control", placeholder = "Başlık giriniz" })
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
</form>