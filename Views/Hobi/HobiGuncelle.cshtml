@model UdemyMVCCVsitesi.Models.Entitiy.tbl_hobiler

@{
    ViewBag.Title = "HobiGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Hobi Güncelleme Sayfası</h4>
<br />
<form class="form-group" method="post">
    <div class="mb-3">
        @Html.Label("Güncellenecek Hobi", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Hobi1, new { @class = "form-control"})
    </div>


    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
