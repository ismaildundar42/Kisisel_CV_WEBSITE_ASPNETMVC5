@model UdemyMVCCVsitesi.Models.Entitiy.tbl_sosyalmedya

@{
    ViewBag.Title = "SosyalMedyaDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Sosyal Medya Güncelleme Sayfası</h4>
<br />
<form class="form-group" method="post">

    <div class="mb-3">
        @Html.Label("Sosyal Medya Adı", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.Label("Sosyal Medya Linki", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.Label("Sosyal Medya Ikonu", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Ikon, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.Label("Sosyal Medya Durumu", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
